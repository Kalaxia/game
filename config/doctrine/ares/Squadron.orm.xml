			</options>
		</field>
		<field name="ship9" column="ship9" type="smallint">
			<options>
				<option name="unsigned">true</option>
				<option name="default">0</option>
			</options>
		</field>
		<field name="ship10" column="ship10" type="smallint">
			<options>
				<option name="unsigned">true</option>
				<option name="default">0</option>
			</options>
		</field>
		<field name="ship11" column="ship11" type="smallint">
			<options>
				<option name="unsigned">true</option>
				<option name="default">0</option>
			</options>
		</field>
		<field name="createdAt" type="datetime_immutable" />
		<field name="updatedAt" type="datetime_immutable" />
	</entity>
</doctrine-mapping>
