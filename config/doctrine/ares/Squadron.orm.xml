<doctrine-mapping xmlns="https://doctrine-project.org/schemas/orm/doctrine-mapping"
				  xmlns:xsi="https://www.w3.org/2001/XMLSchema-instance"
				  xsi:schemaLocation="https://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

	<entity name="App\Modules\Ares\Model\Squadron" table="squadron">
		<id name="id" type="uuid"/>

		<many-to-one field="commander" target-entity="App\Modules\Ares\Model\Commander" inversed-by="squadrons" />

		<field name="position" type="smallint">
			<options>
				<option name="unsigned">true</option>
			</options>
		</field>
		<field name="lineCoord" type="smallint">
			<options>
				<option name="unsigned">true</option>
			</options>
		</field>

		<field name="ship0" column="ship0" type="smallint">
			<options>
				<option name="unsigned">true</option>
				<option name="default">0</option>
			</options>
		</field>
		<field name="ship1" column="ship1" type="smallint">
			<options>
				<option name="unsigned">true</option>
				<option name="default">0</option>
			</options>
		</field>
		<field name="ship2" column="ship2" type="smallint">
			<options>
				<option name="unsigned">true</option>
				<option name="default">0</option>
			</options>
		</field>
		<field name="ship3" column="ship3" type="smallint">
			<options>
				<option name="unsigned">true</option>
				<option name="default">0</option>
			</options>
		</field>
		<field name="ship4" column="ship4" type="smallint">
			<options>
				<option name="unsigned">true</option>
				<option name="default">0</option>
			</options>
		</field>
		<field name="ship5" column="ship5" type="smallint">
			<options>
				<option name="unsigned">true</option>
				<option name="default">0</option>
			</options>
		</field>
		<field name="ship6" column="ship6" type="smallint">
			<options>
				<option name="unsigned">true</option>
				<option name="default">0</option>
			</options>
		</field>
		<field name="ship7" column="ship7" type="smallint">
			<options>
				<option name="unsigned">true</option>
				<option name="default">0</option>
			</options>
		</field>
