{% extends 'layouts/base.html.twig' %}

{% block body %}
<h1>Kalaxiahahaha</h1>

<div class="content">
	<a href="{{ path('create_character', { 'bindKey': bind_key }) }}">
		<em>Créer un</em>
		<strong>Personnage lvl. 1</strong>
		<img src="{{ asset('build/media/avatar/big/empty.png') }}" alt="" />
	</a>

	{% if high_mode %}
		<a href="{{ path('create_character', { 'bindKey': bind_key, 'highMode': true }) }}">
			<em>Créer un</em>
			<strong>Personnage lvl. 5</strong>
			<img src="{{ asset('build/media/avatar/big/empty.png') }}" alt="" />
			<span class="number">+5</span>
		</a>
	{% endif %}

	{% for player in active_players %}
		<a class="color{{ player.rColor }}" href="{{ path('connect', { 'bindKey': player_bind_keys[player.id] }) }}">
			<em>Grade {{ player.level }}</em>
			<strong>{{ player.name }}</strong>
			<img src="{{ asset('build/media/avatar/big/' ~ player.avatar ~ '.png') }}" alt="" />
			<span class="number">{{ player.level }}</span>
		</a>
	{% endfor %}
</div>
{% endblock %}
