<div class="build-item {% if not building_data.real_level %}disable{% endif %}">
	<div class="name">
		<img src="{{ asset('build/media/orbitalbase/' ~ get_building_info(building_number, 'imageLink') ~ '.png') }}" alt="" />
		<strong class="leading-none">{{ get_building_info(building_number, 'frenchName') }}</strong>
		{% if building_data.level > 0 %}
			<span class="level hb lt" title="niveau actuel">{{ building_data.level }}</span>
		{% endif %}
		<a href="#" class="addInfoPanel info hb lt"
		   title="plus d'info"
		   data-building-id="{{ building_number }}"
		   data-info-type="building"
		   data-building-current-level="{{ building_data.level }}">+</a>
	</div>
	{% set price %}
		{{ get_building_resource_cost(building_number, building_data.next_level)|number(-1) }}
		<img src="{{ asset('build/media/resources/resource.png') }}" alt="ressources" class="icon-color" />
	{% endset %}
	{% set time %}
		{{ get_building_time_cost(building_number, building_data.next_level)|lite_seconds }}
		<img src="{{ asset('build/media/resources/time.png') }}" alt="relÃ¨ves" class="icon-color" />
	{% endset %}

	{% if 0 < building_data.building_requirements|length %}
		<span class="button disable hb lt" title="{{ building_data.building_requirements|map(v => v.message)|join(', ') }}">
			<span class="text">
				construction impossible<br/>

				{% if building_data.next_level <= get_building_info(building_number, 'maxLevel', current_base.typeOfBase) %}
					{{ price }} | {{ time }}
				{% endif %}
			</span>
		</span>
	{% else %}
		<a class="button" href="{{ path('build', { 'identifier': building_number }) }}">
			<span class="text">
				augmenter vers le niveau {{ building_data.next_level }}<br/>
				{{ price }} | {{ time }}
			</span>
		</a>
	{% endif %}
</div>

