<twig:LayoutBox>
	<header>
<!--		<img class="main" alt="ressource" src="{{ asset('build/media/rank/cup.png') }}">-->
		<twig:H2>Expérience</twig:H2>
		<twig:H5>Total accumulé</twig:H5>
	</header>
	<section>
		{% for player_ranking in experience_rankings %}
			{{ include('atoms/rankings/top_mover.html.twig', {
				'type': 'xp',
				'current_position': player_ranking.experiencePosition,
				loop,
			}) }}

			{{ include('molecules/rankings/player_ranking_card.html.twig', {
				player_ranking,
				'position': player_ranking.experiencePosition,
				'variation': player_ranking.experienceVariation,
				'value': player_ranking.experience ~ ' xp',
			}) }}

			{{ include('atoms/rankings/bottom_mover.html.twig', {
				'type': 'xp',
				'current_position': player_ranking.experiencePosition,
				loop,
			}) }}
		{% endfor %}
	</section>
</twig:LayoutBox>
