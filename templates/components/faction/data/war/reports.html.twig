<div class="component">
	{% if is_attack %}
		<div class="head skin-2">
			<h2>Derniers combats</h2>
		</div>
	{% else %}
		<div class="head"></div>
	{% endif %}
	<div class="fix-body">
		<div class="body">
			<h4>{{ is_attack ? 'Attaques' : 'Défenses' }}</h4>
			<div class="set-item">
				{% for report in reports %}
					{% set report_data = report.typeOfReport(faction.id) %}
					{% set title = report_data[0] %}
					{% set img = report_data[1] %}

					<div class="item">
						<div class="left">
							<img class="color{{ is_attack ? report.colorD : report.colorA }}" src="{{ asset('build/media/map/action/' ~ img) }}" alt="" />
						</div>

						<div class="center">
							<strong>{{ title }}</strong>
							par <a href="{{ path('embassy', {'player': report.rPlayerAttacker}) }}">{{ report.playerNameA }}</a>
						</div>

						{% if not report.is_legal %}
							<span class="group-link"><a href="#" class="hb lt" title="cette attaque viole un traité">!</a></span>
						{% endif %}
					</div>
				{% endfor %}
			</div>
		</div>
	</div>
</div>
