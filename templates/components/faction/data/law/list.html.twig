{% set statuses = get_faction_info(faction.id, 'status') %}

<div class="component profil">
	<div class="head skin-2">
		{% if law_status == constant('App\\Modules\\Zeus\\Model\\Player::CHIEF') %}
			<h2>Lois</h2>
		{% endif %}
	</div>
	<div class="fix-body">
		<div class="body">
			<h4>{{ statuses[law_status - 1] }}</h4>
			{% for i in 1..laws_count %}
				{% if get_law_info(i, 'department') == law_status %}
					<div class="build-item base-type {% if not get_law_info(i, 'isImplemented') %}disabled{% endif %}">
						<div class="name">
							<img src="{{ asset('build/media/faction/law/common.png') }}" alt="">
							<strong>
								{{ get_law_info(i, 'name') }}
								{% if not get_law_info(i, 'isImplemented') %}
									<span class="hb" title="cette loi n'est pas encore fonctionnelle">[?]</span>
								{% endif %}
							</strong>
						</div>

						<p class="desc">{{ get_law_info(i, 'shortDescription')|raw }}</p>
					</div>
				{% endif %}
			{% endfor %}
		</div>
	</div>
</div>
