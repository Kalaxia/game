<header class="absolute inset-x-0 top-0 z-50" data-controller="ui--modal">
	<nav class="flex items-center justify-between p-6 lg:px-8" aria-label="Global">
		<div class="flex lg:flex-1">
			<a href="{{ path('homepage') }}" class="-m-1.5 p-1.5">
				<span class="sr-only">Kalaxia</span>
				<img class="h-8 w-auto" src="{{ asset('images/white_logo.png') }}" alt="">
			</a>
		</div>
		<div class="flex lg:hidden">
			<button type="button"
					data-action="ui--modal#toggle"
					class="-m-2.5 inline-flex items-center justify-center rounded-md p-2.5 text-gray-400">
				<span class="sr-only">Menu</span>
				<svg class="size-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true" data-slot="icon">
					<path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
				</svg>
			</button>
		</div>
		<div class="hidden lg:flex lg:gap-x-12">
			<a href="#" class="text-sm/6 font-semibold text-white">Le jeu</a>
			<a href="#" class="text-sm/6 font-semibold text-white">Qui sommes-nous ?</a>
			{#<a href="#" class="text-sm/6 font-semibold text-white">Marketplace</a>
				<a href="#" class="text-sm/6 font-semibold text-white">Company</a>#}
		</div>
		<div class="hidden lg:flex lg:flex-1 lg:justify-end">
			{% if is_granted('IS_AUTHENTICATED_FULLY') %}
				<a href="{{ path('player_choice') }}" class="text-sm/6 font-semibold text-white">
					{{ app.user.username }}
					<span aria-hidden="true">&rarr;</span>
				</a>
			{% else %}
				<a href="{{ path('login') }}" class="text-sm/6 font-semibold text-white">
					Connexion
					<span aria-hidden="true">&rarr;</span>
				</a>
			{% endif %}
		</div>
	</nav>
	<!-- Mobile menu, show/hide based on menu open state. -->
	<dialog class="lg:hidden" data-ui--modal-target="dialog" aria-modal="true">
		<!-- Background backdrop, show/hide based on slide-over state. -->
		<div class="fixed inset-0 z-50"></div>
		<div class="fixed inset-y-0 right-0 z-50 w-full overflow-y-auto bg-gray-900 px-6 py-6 sm:max-w-sm sm:ring-1 sm:ring-white/40">
			<div class="flex items-center justify-between">
				<a href="#" class="-m-1.5 p-1.5">
					<span class="sr-only">Kalaxia</span>
					<img class="h-8 w-auto" src="{{ asset('images/white_logo.png') }}" alt="">
				</a>
				<button type="button"
						data-action="ui--modal#toggle"
						class="-m-2.5 rounded-md p-2.5 text-gray-400">
					<span class="sr-only">Fermer</span>
					<svg class="size-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true" data-slot="icon">
						<path stroke-linecap="round" stroke-linejoin="round" d="M6 18 18 6M6 6l12 12" />
					</svg>
				</button>
			</div>
			<div class="mt-6 flow-root">
				<div class="-my-6 divide-y divide-gray-500/25">
					<div class="space-y-2 py-6">
						<a href="#" class="-mx-3 block rounded-lg px-3 py-2 text-base/7 font-semibold text-white hover:bg-gray-800">Le jeu</a>
						<a href="#" class="-mx-3 block rounded-lg px-3 py-2 text-base/7 font-semibold text-white hover:bg-gray-800">Qui sommes-nous ?</a>
						{#<a href="#" class="-mx-3 block rounded-lg px-3 py-2 text-base/7 font-semibold text-white hover:bg-gray-800">Marketplace</a>
							<a href="#" class="-mx-3 block rounded-lg px-3 py-2 text-base/7 font-semibold text-white hover:bg-gray-800">Company</a>#}
					</div>
					<div class="py-6">
						<a href="{{ path('login') }}" class="-mx-3 block rounded-lg px-3 py-2.5 text-base/7 font-semibold text-white hover:bg-gray-800">Connexion</a>
					</div>
				</div>
			</div>
		</div>
	</dialog>
</header>
