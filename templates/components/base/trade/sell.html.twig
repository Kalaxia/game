<div class="col-span-3 flex gap-x-4 [&>div]:grow">
	<twig:ResourceSalesForm />

	<twig:CommanderSalesForm :currentRate="commander_current_rate" />

	<div id="ships-sales-form" class="component market-sell">
		<header>
			{#<img src="{{ asset('build/media/orbitalbase/dock2.png') }}" alt="vaisseaux" class="main" />#}
			<twig:H2>Vaisseaux</twig:H2>
			<twig:H5>mettre en vente</twig:H5>
		</header>

		<section class="mt-4 flex flex-col gap-y-2">
			{% for ship_number in current_planet.shipStorage|keys %}
				{% set ship_quantity = current_planet.shipStorage[ship_number] %}
				{% if ship_quantity > 0 %}
					<twig:ShipsSalesForm :currentRate="ship_current_rate" :shipQuantity="ship_quantity" :shipIdentifier="ship_number" />
				{% endif %}
			{% endfor %}
		</section>
	</div>
</div>
